{
  "manifest_version": 2,
  "name": "E-Chat",
  "version": "1.0.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script/index.js","script/background.js"]
    }],
  "background": {
    "page": "html/index.html"
  },
  "browser_action": {"default_popup" :  "html/index.html"}
}